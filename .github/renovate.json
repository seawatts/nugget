{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": ["config:base"],
  "npm": {
    "fileMatch": ["(^|/)package\\.json$", "(^|/)package\\.json\\.hbs$"]
  },
  "packageRules": [
    {
      "enabled": false,
      "matchPackagePatterns": ["^@nugget/"]
    }
  ],
  "rangeStrategy": "bump",
  "updateInternalDeps": true
}
